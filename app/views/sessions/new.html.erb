<div class="container">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <div class="row">
        <h1>Sign In</h1>
      <%= form_tag sessions_path, method: 'post' do %>
        <div class="form-group">
          <%= text_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
        </div>
        <%= submit_tag 'Sign In', data: {disable_with: 'Signing In...'}, class: 'btn btn-success' %>
        <%= link_to "Sign in with Facebook", "/auth/facebook", class: 'btn btn-primary pull-right' %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
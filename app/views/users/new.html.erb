<div class="container">
  <h1>Sign Up</h1>

  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <%= @user.errors.full_messages.to_sentence %>
    <% end %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Name', class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
    </div>
    <%= f.submit "Register", :disable_with => 'Registering...', class: 'btn btn-lg btn-success' %>
  <% end %>
</div>
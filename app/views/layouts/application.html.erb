<!DOCTYPE html>
<html>
<head>
  <title>A Ticket Jar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">A Ticket Jar</a>
    <ul class="nav navbar-nav pull-right">
      <% if current_user %>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_event_path %>">New</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= mine_events_path %>">My Events</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= sign_out_path %>" data-method='delete'>Sign Out</a>
        </li>
      <% else %>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_session_path %>">Sign In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
        </li>
      <% end %>
    </ul>
  </nav>
  <%= flash_messages %>
  <%= yield %>
</body>
</html>
